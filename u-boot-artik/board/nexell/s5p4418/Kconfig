choice
	prompt "Board select"

config TARGET_S5P4418_DRONE
	bool "S5P4418_DRONE"
	help
	  Support for s5p4418 drone platform.

config TARGET_ARTIK530_RAPTOR
        bool "ARTIK530_RAPTOR"
	help
	  Support for artik530_raptor platform.

config TARGET_ARTIK530_MERLINO
        bool "ARTIK530_MERLINO"
	help
	  Support for artik530_merlino platform.

config TARGET_ARTIK305_RAPTOR
        bool "ARTIK305_RAPTOR"
	help
	  Support for artik305_raptor platform.

endchoice

config SYS_VENDOR
	default "nexell"

config SYS_BOARD
	default "s5p4418"

config SYS_CONFIG_NAME
	string "Board header file"
	help
	  This option should contain the base name of board header file.
	  The header file include/configs/<CONFIG_SYS_CONFIG_NAME>.h
	  should be included from include/config.h.

source "board/nexell/common/Kconfig"
